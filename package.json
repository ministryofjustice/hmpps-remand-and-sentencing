{
  "name": "hmpps-remand-and-sentencing",
  "version": "0.0.1",
  "description": "Hmpps Remand And Sentencing",
  "repository": "git@github.com:ministryofjustice/hmpps-remand-and-sentencing.git",
  "license": "MIT",
  "scripts": {
    "prepare": "hmpps-precommit-hooks-prepare",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "node esbuild/esbuild --watch",
    "start-feature": " node $NODE_DEBUG_OPTION --env-file=feature.env dist/server.js | bunyan -o short",
    "start-feature:dev": "node esbuild/esbuild --watch --env feature.env",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist build node_modules stylesheets test_results",
    "rebuild": "npm run clean && npm run setup && npm run build",
    "precommit:secrets": "gitleaks git --pre-commit --redact --staged --verbose --config .gitleaks/config.toml --gitleaks-ignore-path .gitleaks/.gitleaksignore",
    "precommit:lint": "lint-staged",
    "precommit:verify": "npm run typecheck && npm test",
    "setup": "npm ci && hmpps-npm-script-run-allowlist",
    "generate-prison-api-types": "openapi-typescript https://api-dev.prison.service.justice.gov.uk/v3/api-docs > ./server/@types/prisonApi/index.d.ts",
    "generate-court-register-types": "openapi-typescript https://court-register-api-dev.hmpps.service.justice.gov.uk/v3/api-docs > ./server/@types/courtRegisterApi/index.d.ts",
    "generate-manage-offences-types": "openapi-typescript https://manage-offences-api-dev.hmpps.service.justice.gov.uk/v3/api-docs > ./server/@types/manageOffencesApi/index.d.ts",
    "generate-remand-and-sentencing-api-types": "openapi-typescript https://remand-and-sentencing-api-dev.hmpps.service.justice.gov.uk/v3/api-docs > ./server/@types/remandAndSentencingApi/index.d.ts",
    "generate-document-management-api-types": "openapi-typescript https://document-api-dev.hmpps.service.justice.gov.uk/v3/api-docs > ./server/@types/documentManagementApi/index.d.ts",
    "generate-prisoner-search-api-types": "openapi-typescript https://prisoner-search-dev.prison.service.justice.gov.uk/v3/api-docs > ./server/@types/prisonerSearchApi/index.d.ts",
    "generate-token-verification-api-types": "openapi-typescript https://token-verification-api-dev.prison.service.justice.gov.uk/v3/api-docs > ./server/@types/tokenVerificationApi/index.d.ts",
    "generate-calculate-release-dates-api-types": "openapi-typescript https://calculate-release-dates-api-dev.hmpps.service.justice.gov.uk/v3/api-docs > ./server/@types/calculateReleaseDatesApi/index.d.ts",
    "generate-court-cases-release-dates-api-types": "openapi-typescript https://court-cases-release-dates-api-dev.hmpps.service.justice.gov.uk/v3/api-docs > server/@types/courtCasesReleaseDatesApi/index.d.ts"
  },
  "engines": {
    "node": "^24",
    "npm": "^11"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.936.0",
    "@microsoft/applicationinsights-clickanalytics-js": "^3.3.10",
    "@microsoft/applicationinsights-web": "^3.3.10",
    "@ministryofjustice/frontend": "^8.0.0",
    "@ministryofjustice/hmpps-auth-clients": "^1.0.0",
    "@ministryofjustice/hmpps-court-cases-release-dates-design": "^4.15.2",
    "@ministryofjustice/hmpps-monitoring": "^1.0.0",
    "@ministryofjustice/hmpps-rest-client": "^1.0.0",
    "accessible-autocomplete": "3.0.1",
    "applicationinsights": "^2.9.8",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "csrf-sync": "^4.2.1",
    "dayjs": "^1.11.19",
    "express": "^5.2.0",
    "express-session": "^1.18.2",
    "govuk-frontend": "^5.13.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jwt-decode": "^4.0.0",
    "multer": "^2.0.2",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^5.10.0",
    "superagent": "^10.2.3",
    "validatorjs": "^3.22.1"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.4",
    "@ministryofjustice/eslint-config-hmpps": "^1.0.1",
    "@ministryofjustice/hmpps-precommit-hooks": "^1.0.2",
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "@tsconfig/node24": "^24.0.3",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.8.0",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/parser": "8.47.0",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "axe-core": "^4.11.0",
    "cheerio": "^1.1.2",
    "cypress": "^15.8.2",
    "cypress-axe": "^1.7.0",
    "cypress-multi-reporters": "^2.0.5",
    "del": "8.0.1",
    "esbuild": "^0.27.2",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^16.2.7",
    "nock": "^14.0.10",
    "openapi-typescript": "^7.10.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
