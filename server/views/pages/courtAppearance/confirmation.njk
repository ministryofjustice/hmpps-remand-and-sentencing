{% extends "../../partials/prisonerBannerLayout.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set pageTitle = applicationName + " - Remand successfully saved" %}

{% block subNavigation %}
{% endblock %}

{% block content %}

    {# Define a block variable with HTML inside #}
    {% set titleHtml %}
        <span class="govuk-!-font-size-36">
            {{ "Court case" if isAddCourtCase else "Appearance" }} successfully saved
        </span>
    {% endset %}

    <div class="govuk-grid-row govuk-!-margin-top-4">
        <div class="govuk-grid-column-two-thirds">
            {{ govukPanel({
                titleHtml: titleHtml,
                classes: "govuk-!-margin-bottom-6"
            }) }}

            <div class="govuk-!-margin-top-6">
                <h2 class="govuk-heading-l">What you can do next</h2>
                <div class="govuk-body govuk-!-margin-top-6">
                    {% if showBookASecureMoveLink %}
                        <a class="govuk-link govuk-link--no-visited-state" href="{{ bookSecureMoveServiceUrl }}" data-qa="bookASecureMoveLink">
                                Book a secure move
                        </a>
                    {% endif %}
                    {% if showBookAVideoLink %}
                        <a class="govuk-link govuk-link--no-visited-state" href="{{ bookVideoLinkServiceUrl }}" data-qa="bookAVideoLinkLink">
                                Book a video link
                        </a>
                    {% endif %}
                    <span>You can go back to {{ prisoner | firstNameSpaceLastName | pluraliseName }}:</span>
                    <ul class="govuk-list govuk-!-margin-top-2">
                        <li>
                            <a class="govuk-link govuk-link--no-visited-state" href="/person/{{ nomsId }}">
                                Court case information
                            </a>
                        </li>
                        <li>
                            <a class="govuk-link govuk-link--no-visited-state" href="{{ digitalPrisonServicesUrl }}/prisoner/{{ nomsId }}">
                                Prisoner profile
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="govuk-!-margin-top-6">
                    <p class="govuk-body">
                        Or, go to the
                        <a class="govuk-link govuk-link--no-visited-state" href="{{ digitalPrisonServicesUrl }}">
                            DPS homepage
                        </a>.
                    </p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
