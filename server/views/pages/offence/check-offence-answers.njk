{% extends "../../partials/prisonerBannerLayout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "../../components/offenceCard/macro.njk" import offenceCard %}
{%- from "moj/components/banner/macro.njk" import mojBanner -%}

{% set pageTitle = applicationName + " - Check offences" %}

{% block content %}

    <div class="govuk-grid-row govuk-!-margin-top-4">
        <div class="govuk-grid-column-two-thirds">
            {% if infoBanner | length %}
                {{ mojBanner({
                type: 'success',
                text: infoBanner | join(","),
                iconFallbackText: 'Success'
            }) }}
            {% endif %}
            
            <span class="govuk-caption-l">Add an offence to court case {{ courtCaseReference }}</span>
            <h1 class="govuk-heading-l">You have added {{ courtAppearance.offences | length }} offences to case {{ courtAppearance.caseReferenceNumber }} </h1>
            {{ govukSummaryList({
                    classes: "govuk-summary-list--no-border",
                    rows: [
                        {
                            key: {
                                text: "Court name"
                            },
                            value: {
                                text: courtAppearance.courtName
                            }
                        },
                        {
                            key: {
                            text: "Warrant date"
                        },
                            value: {
                            text: courtAppearance.warrantDate | formatDate
                        }
                        }
                    ]
                }) 
            }}
            <h2 class="govuk-heading-m govuk-!-margin-bottom-6">Offences added</h2>
            <div class="govuk-button-group govuk-!-margin-top-8">
                {{ govukButton({
                    text: "Add another offence",
                    classes: "govuk-button--secondary",
                    href: "/person/" + nomsId + "/court-cases/" + courtCaseReference + "/appearance/" + appearanceReference + "/offences/" + courtAppearance.offences | length + "/add-another-offence"
                }) }}

                {{ govukButton({
                    text: "Finish adding offences and continue",
                    href: "/person/" + nomsId + "/court-cases/" + courtCaseReference + "/appearance/" + appearanceReference + "/next-hearing-select"
                }) }}
            </div>

            {% for offence in courtAppearance.offences %}
                {{
                    offenceCard({
                        offenceCode: offence.offenceCode,
                        offenceName: offence.offenceName,
                        offenceStartDate: offence.offenceStartDate,
                        offenceEndDate: offence.offenceEndDate,
                        outcome: offence.outcome,
                        actions: {
                            items: [
                                {
                                    href: "/person/" + nomsId + "/court-cases/" + courtCaseReference + "/appearance/" + appearanceReference +"/offences/" + loop.index0 + "/offence-code",
                                    text: "Edit",
                                    visuallyHiddenText: "edit offence"
                                },
                                {
                                    href: "/person/" + nomsId + "/court-cases/" + courtCaseReference + "/appearance/" + appearanceReference +"/offences/" + loop.index0 + "/delete-offence",
                                    text: "Delete",
                                    visuallyHiddenText: "delete offence"
                                }
                            ]
                        }
                    })
                }}
            {% endfor %}


        </div>
    </div>

{% endblock %}