{% extends "../../partials/hearingDetailsLayout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/hint/macro.njk" import govukHint %}

{% set yesHtml %}
  {{ govukInput({
    label: {
      text: "Count number"
    },
    id: "countNumber",
    name: "countNumber",
    classes: "govuk-input--width-2",
    errorMessage: errors | findError('countNumber'),
    value: countNumberForm.countNumber,
    inputmode: "numeric"
  }) }}
{% endset %}

{% set pageTitle = applicationName + " - Add a court case Count Number" %}

{% block pageContent %}
            <form method="post" action="/person/{{ nomsId }}/{{ addOrEditCourtCase }}/{{ courtCaseReference }}/{{ addOrEditCourtAppearance }}/{{ appearanceReference }}/offences/{{ chargeUuid }}/submit-count-number{{ "?submitToEditOffence=true" if submitToEditOffence }}" autocomplete="off">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                {% include "../../partials/offenceCaption.njk" %}
                {% call govukFieldset({
                        describedBy: "hasCountNumber-error" if errorMessage else "",
                        legend: {
                            text: "Is there a count number for this offence?",
                            isPageHeading: true,
                            classes: "govuk-fieldset__legend--l"
                        }
                    }) %}
                 {% if offenceHint %}
                    {{
                      govukHint(offenceHint)
                    }}
                  {% endif %}
                {{ govukInsetText({
                    text: "By adding the count number, this service can accurately determine the consecutive chain"
                }) }}
                {% set countNumberHelpHtml %}
                  <p class="govuk-body">You can find the count number on the:</p>
                  <ul class="govuk-list govuk-list--bullet">
                    <li>prison court register</li>
                    <li>warrant</li>
                    <li>indictment</li>
                    <li>Common Platform</li>
                  </ul>
                {% endset %}
                {{ govukDetails({
                  summaryText: "Where to find the count number",
                  html: countNumberHelpHtml
                }) }}

                {{ govukRadios({
                  name: "hasCountNumber",
                  value: countNumberForm["hasCountNumber"],
                  errorMessage: errors | findError('hasCountNumber'),
                  items: [{
                    value: "true",
                    text: "Yes",
                    checked: countNumberForm.hasCountNumber === 'true',
                    conditional: {
                      html: yesHtml
                    }
                  },
                  {
                    value: "false",
                    checked: countNumberForm.hasCountNumber === 'false',
                    text: "No"
                  }]
                }) }}

                {{ govukButton({
                  text: "Continue",
                  attributes: {  'data-qa': 'continue-button' }
                }) }}

                {% endcall %}
            </form>

{% endblock %}
