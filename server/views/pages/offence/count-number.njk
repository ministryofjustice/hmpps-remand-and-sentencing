{% extends "../../partials/appearanceDetailsLayout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set yesHtml %}
  {{ govukInput({
    label: {
      text: "Count number"
    },
    id: "countNumber",
    name: "countNumber",
    classes: "govuk-input--width-2",
    errorMessage: errors | findError('countNumber'),
    value: countNumberForm.countNumber,
    inputmode: "numeric"
  }) }}
{% endset %}

{% set pageTitle = applicationName + " - Add a court case Count Number" %}

{% block pageContent %}
            <form method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                {% include "../../partials/offenceCaption.njk" %}
                <h1 class="govuk-heading-l">Is there a count number for this offence?</h1>
                {{ govukDetails({
                  summaryText: "Why is this number important?",
                  text: "Sometimes the offences are given a number on the warrant, which needs to be reflected in this service. These are called count or offence numbers. Identifying the sentences can impact the accuracy of the release dates."
                }) }}

                {{ govukRadios({
                  name: "hasCountNumber",
                  value: countNumberForm["hasCountNumber"],
                  errorMessage: errors | findError('hasCountNumber'),
                  items: [{
                    value: "true",
                    text: "Yes",
                    checked: countNumberForm.hasCountNumber === 'true',
                    conditional: {
                      html: yesHtml
                    }
                  },
                  {
                    value: "false",
                    checked: countNumberForm.hasCountNumber === 'false',
                    text: "No"
                  }]
                }) }}

                <div class="govuk-button-group">
                    <button type="submit"
                            class="govuk-button"
                            data-module="govuk-button"
                            data-qa="continue-button"
                            formaction="/person/{{ nomsId }}/{{ addOrEditCourtCase }}/{{ courtCaseReference }}/{{ addOrEditCourtAppearance }}/{{ appearanceReference }}/offences/{{ offenceReference }}/submit-count-number{{ "?submitToEditOffence=true" if submitToEditOffence }}">
                        Continue
                    </button>

                    <button type="submit"
                            class="govuk-button govuk-button--secondary"
                            data-module="govuk-button"
                            data-qa="save-draft-button"
                            formaction="/person/{{ nomsId }}/{{ addOrEditCourtCase }}/{{ courtCaseReference }}/{{ addOrEditCourtAppearance }}/{{ appearanceReference }}/submit-draft?submittedFromUrl={{ req.url }}">
                        Save as draft
                    </button>
                </div>
            </form>

{% endblock %}