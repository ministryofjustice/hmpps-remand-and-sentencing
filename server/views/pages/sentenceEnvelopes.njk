{% extends "../partials/prisonerBannerBackLayout.njk" %}
{% from "hmpps/components/court-cases-release-dates/offence-card/macro.njk" import offenceCard %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% set pageTitle = applicationName + " - Sentences" %}

{% block content %}
    {{ super() }}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
           <h1 class="govuk-heading-l govuk-!-margin-top-4">Sentences</h1>  
              {{ govukTable({
                head: [
                  {
                    text: 'Sentence Warrant Date'
                  },{
                    text: 'Case reference'
                  },{
                    text: 'Sentence reference'
                  },{
                    text: 'Sentence type'
                  },{
                    text: 'Consec or concurrent'
                  }
                ],
                rows: sentenceRows
              })}}
        </div>
    </div>
{% endblock %}

