{% extends "../../partials/prisonerBannerBackLayout.njk" %}
{% from "moj/components/interruption-card/macro.njk" import interruptionCard %}

{% set pageTitle = "offence - Making sentence forthwith in consecutive chain" %}

{% block content %}
    <div class="govuk-grid-row govuk-!-margin-top-4">
        <div class="govuk-grid-column-two-thirds">
            {% call interruptionCard({
                heading: "Making this sentence forthwith will affect the consecutive chain",
                primaryAction: {
                    text: "Yes, make the sentence forthwith",
                    href: "/person/" + nomsId + "/" + addOrEditCourtCase + "/" + courtCaseReference  + "/" + addOrEditCourtAppearance + "/" + appearanceReference +"/sentencing/offences/"+ offenceReference +"/continue-making-sentence-forthwith",
                    attributes: {
                        "data-qa": "continue-button"
                    }
                },
                secondaryAction: {
                    text: "Go back",
                    href: backLink
                }
            })%}
                <p class="govuk-body-l govuk-!-width-three-quarters">
                    {% if offence.sentence.countNumber and offence.sentence.countNumber !== '-1'%}
                        Count {{ offence.sentence.countNumber }}<br>
                    {% endif %}
                    <strong>{{ offence.offenceCode }} {{ offenceDetails.description}}</strong><br>
                    {% if offence.offenceStartDate %}
                        committed on {{ offence.offenceStartDate | formatDate }}{% if offence.offenceEndDate %} to {{offence.offenceEndDate | formatDate }}{% endif %}
                    {% endif %}
                </p>
                <p class="govuk-body">This sentence is currently linked to another sentence as part of a consecutive chain. Changing this sentence to forthwith will impact the chain and might no longer reflect the warrant correctly.</p>
                <p class="govuk-body">If you make the sentence forthwith, you will need to check the other sentences, to make sure they are accurate.</p>
                <p class="govuk-body govuk-!-font-weight-bold govuk-!-margin-top-6">Are you sure you want to make it forthwith?</p>
            {%- endcall %}
        </div>
    </div>
{% endblock %}
