{% extends "./prisonerBannerLayout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% if backLink %}
    {% block subNavigation %}
            <div class="govuk-grid-row" role="navigation">
                <div class="govuk-grid-column-one-half">
                    {{ govukBackLink({
                        text: "Back",
                        href: backLink,
                        attributes: {  'data-qa': 'back-link' }
                    }) }}
                    </div>
                <div class="govuk-grid-column-one-half govuk-!-text-align-right"><a href="/person/{{ nomsId }}" class="govuk-link govuk-body-s">Go to Court cases</a></div>
            </div>
    {% endblock %}
{% endif %}